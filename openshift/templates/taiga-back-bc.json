{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "tagia-back-build",
    "creationTimestamp": null
  },
  "objects": [
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}",
          "template": "taiga-back-build"
        },
        "annotations": {
          "description": "Defines how to build the application",
          "template.alpha.openshift.io/wait-for-ready": "true"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "GitHub",
            "github": {
              "secret": "${GITHUB_WEBHOOK_SECRET}"
            }
          },
          {
            "type": "ImageChange",
            "imageChange": {}
          },
          {
            "type": "ConfigChange"
          }
        ],
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GIT_URL}",
            "ref": "${GIT_REF}"
          }
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "taiga-back-upstream:latest"
            },
            "env": [
              {
                "name": "PIP_INDEX_URL"
              }
            ]
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:latest"
          }
        },
        "resources": {
          "limits": {
            "cpu": "4",
            "memory": "4Gi"
          }
        },
        "postCommit": {
          "script": "./manage.py test"
        },
        "nodeSelector": null
      },
      "status": {
        "lastVersion": 0
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "generation": 1,
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}",
          "template": "${NAME}"
        },
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "value": "taiga-back"
    },
    {
      "name": "GITHUB_WEBHOOK_SECRET",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}",
      "required": true
    },
    {
      "name": "GIT_URL",
      "required": true,
      "value": "https://github.com/sheaphillips/taiga-back.git"
    },
    {
      "name": "GIT_REF",
      "required": true,
      "value": "refs/heads/v3.1.1"
    }

  ]
}
